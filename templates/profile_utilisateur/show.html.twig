{# templates/profile_utilisateur/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<h1 class="text-center ">Mon profil</h1>
<section style="background-color: #eee;">
  <div class="container py-6">
    <div class="row">
      <div class="col-lg-12 ">
        <div class="card mb-12">
          <div class="card-body text-center">
            <h5 class="my-3">{{ user.Prenom }} {{ user.Nom }}</h5>
            <p class="mb-1">Email: {{ user.email }}</p>
            <p class="mb-1">Téléphone: {{ user.Telephone }}</p>
            <p class="mb-1">Date de naissance: {{ user.DateNaissance|date('d-m-Y') }}</p>
            <p class="mb-1">Adresse: {{ user.Adresse }}</p>
            <p class="mb-1">Code postal: {{ user.CodePostale }}</p>
            <p class="mb-1">Pays: {{ user.Pays }}</p>
            <a href="{{ path('profile_edit') }}" class="btn btn-primary mt-3">Modifier</a>
            <form method="post" action="{{ path('profile_delete') }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?');" class="mt-2">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
              <button class="btn btn-danger">Supprimer mon compte</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
