{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<h1 class="text-center my-4">Mon profil</h1>
<section style="background-color: #f8f9fa;">
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-12 offset-lg-1">
        <div class="card shadow-lg border-0">
          <div class="card-body text-center">
            <div class="profile-picture mb-4">
              <img src="{{ asset('images/profile.png') }}" alt="Profile Picture" class="rounded-circle" width="150">
            </div>
            <h3 class="my-3">{{ user.Prenom }} {{ user.Nom }}</h3>
            <p class="text-muted mb-1"><i class="fas fa-envelope"></i> Email: {{ user.email }}</p>
            <p class="text-muted mb-1"><i class="fas fa-phone"></i> Téléphone: {{ user.Telephone }}</p>
            <p class="text-muted mb-1"><i class="fas fa-birthday-cake"></i> Date de naissance: {{ user.DateNaissance|date('d-m-Y') }}</p>
            <p class="text-muted mb-1"><i class="fas fa-map-marker-alt"></i> Adresse: {{ user.Adresse }}</p>
            <p class="text-muted mb-1"><i class="fas fa-map-pin"></i> Code postal: {{ user.CodePostale }}</p>
            <p class="text-muted mb-1"><i class="fas fa-flag"></i> Pays: {{ user.Pays }}</p>
            <a href="{{ path('profile_edit') }}" class="btn btn-outline-primary mt-3"><i class="fas fa-edit"></i> Modifier</a>
           
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .profile-picture img {
    border: 5px solid #fff;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
  }
</style>

{% endblock %}
