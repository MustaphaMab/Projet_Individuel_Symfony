{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<section class="h-100 gradient-form" style="background-color: #eee;">
		<div class="container py-5 h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-xl-10">
					<div class="card rounded-3 text-black">
						<div class="row g-0">
							<div class="">
								<div class="card-body p-md-5 mx-md-4">

									<form method="post">
										<p class="titre_connexion connexion-title">Connexion</p>

										{% if error %}
											<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
										{% endif %}

										{% if app.user %}
											<div class="mb-3">
												You are logged in as
												{{ app.user.userIdentifier }},
												<a href="{{ path('app_logout') }}">Logout</a>
											</div>
										{% endif %}

										<div data-mdb-input-init class="form-outline mb-4">
											<label for="inputEmail" class="e 	mail-label">Email</label>
											<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus aria-label="Adresse Email">
											<div id="emailError" class="invalid-feedback" style="display: none;"></div>
										</div>

										<div data-mdb-input-init class="form-outline mb-4">
											<label for="inputPassword" class="password-label">Mot de passe</label>
											<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required aria-label="Mot de passe">
											<div id="passwordError" class="invalid-feedback" style="display: none;"></div>
										</div>

										<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

										<div class="text-center pt-1 mb-5 pb-1">
											<div class="d-flex justify-content-center">
												<button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Valider</button>
											</div>
											<a class="text-muted" href="#!">Mot de passe oublié ?</a>
										</div>

										<div class="d-flex align-items-center justify-content-center pb-4">
											<p class="mb-0 me-2">Pas de compte, inscrivez-vous</p>
											<button type="button" class="btn btn-outline-danger" onclick="location.href='{{ path('app_register') }}';">Inscription</button>
										</div>

									</form>

								</div>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</section>


	<script>
		document.addEventListener('DOMContentLoaded', function () {
const loginForm = document.querySelector('form');
loginForm.addEventListener('submit', function (event) {
let isValid = true;
const emailInput = document.getElementById('inputEmail');
const passwordInput = document.getElementById('inputPassword');
const emailError = document.getElementById('emailError');
const passwordError = document.getElementById('passwordError');

// Validation de l'email avec RegExp
const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
if (! emailPattern.test(emailInput.value)) {
emailError.textContent = "S'il vous plaît, entrez une adresse email valide.";
emailError.style.display = 'block'; // Montrer le message d'erreur
isValid = false;
} else {
emailError.style.display = 'none'; // Cacher le message d'erreur si tout est correct
}

// Validation de la longueur du mot de passe
if (passwordInput.value.length < 8) {
passwordError.textContent = 'Votre mot de passe doit contenir au moins 8 caractères.';
passwordError.style.display = 'block'; // Montrer le message d'erreur
isValid = false;
} else {
passwordError.style.display = 'none'; // Cacher le message d'erreur si tout est correct
}

if (! isValid) {
event.preventDefault(); // Empêcher la soumission du formulaire si des erreurs sont trouvées
}
});
});
	</script>


{% endblock %}
