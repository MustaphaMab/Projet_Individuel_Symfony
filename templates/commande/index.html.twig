{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="example-wrapper table table-success table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Validation</th>
                <th>Statut</th>
                <th>Date</th>
                <th>Suivi</th>
                <th>Montant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.Validation }}</td>
                <td>{{ commande.Statut }}</td>
                <td>{{ commande.Date }}</td>
                <td>{{ commande.Suivi }}</td>
                <td>{{ commande.Montant }}</td>
                <td>
                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_new') }}">Create new</a>
{% endblock %}
