{% extends 'base.html.twig' %}

{% block title %}Votre Panier{% endblock %}

{% block body %}
<h1>Votre Panier</h1>
<div class="container">
    {% if products|length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Quantit√©</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for item in products %}
            <tr>
                <td><img src="{{ asset('images/' ~ item.product.photo) }}" alt="..." class="img-thumbnail" style="width: 50px;"> {{ item.product.nom }}</td>
                <td>{{ item.quantity }}</td>
                <td>
                    <a href="{{ path('cart_add', {'id': item.product.id}) }}" class="btn btn-sm btn-primary">+</a>
                    <a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-sm btn-danger">-</a>
                    <a href="{{ path('cart_delete', {'id': item.product.id}) }}" class="btn btn-sm btn-warning">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div>
        <a href="{{ path('cart_empty') }}" class="btn btn-danger">Vider le panier</a>
    </div>
    {% else %}
    <p>Votre panier est vide.</p>
    {% endif %}
</div>
{% endblock %}
